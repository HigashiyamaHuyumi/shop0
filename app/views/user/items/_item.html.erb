
<div class="row justify-content-center">
  <% items.each do |item| %>
    <div class="col-md-3">
      <div class="card border-0">
        <% if item.image.attached? %>
          <%= link_to item_path(item) do %>
            <%= image_tag item.image, width: 265, height: 300 %>
          <% end %>
        <% else %>
          <%= link_to item_path(item) do %>
            <%= image_tag "no_image.jpg", width: 265, height: 300 %>
          <% end %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= item.name %></h5>
          <p class="card-text">ï¿¥<%= number_with_delimiter(item.price, precision: 0) %></p>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <%= paginate items %>
  </div>
</div>