<h2>ジャンル：<%= @genre.name %></h2>

<ul>
  <% @items.each do |item| %>
    <li>
      <div class="col-md-3">
        <div class="card border-0">
          <%= link_to item_path(item) do %>
            <%= image_tag item.get_image, width: 265, height: 300 %>
            <div class="card-body">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text">￥<%= number_with_delimiter(item.price, precision: 0) %></p>
            </div>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>