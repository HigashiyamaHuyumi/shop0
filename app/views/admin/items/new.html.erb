<div class="container">
  <h5><span style="background-color: #dcdcdc;">商品新規登録</span></h5>

  <div class="row justify-content-center">
    <div class="col-md-6">

    <!-- エラーチェック -->
    <% if @item.errors.any? %>
      <%= @item.errors.count %> errors prohibited this item from being saved:
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @item,url: admin_items_path, method: :post, local: true, multipart: true do |f| %>

      <%= render partial: 'item_field', locals: { f: f } %>

    </div>
  </div>

  <div class="row justify-content-center">
    <%= f.submit'新規登録', class: "btn btn-success" %>
  </div>

    <% end %>

</div>