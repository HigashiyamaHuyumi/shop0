<div class="container">
  <h5><span style="background-color: #dcdcdc;">商品新規登録</span></h5>

  <div class="row justify-content-center">
    <div class="col-md-6">

    <!-- エラーチェック -->
    <% if @item.errors.any? %>
      <%= @item.errors.count %> errors prohibited this item from being saved:
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @item,url: admin_items_path, method: :post, local: true, multipart: true do |f| %>

      <%= f.label :"商品画像" %>
      <%= f.file_field :image, accept: "image/*" %>
      <br>

      <%= f.label :"商品名" %>
      <%= f.text_field :name %>
      <br>

      <%= f.label :"色" %>
      <%= f.text_field :color %>
      <br>

      <%= f.label :"商品説明" %>
      <%= f.text_area :introduction %>
      <br>

      <%= f.label :"税抜価格" %>
      <%= f.text_field :price %>円
      <br>

      <div class="form-group row">
         <%= f.label :genre_id %>
         <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>

    </div>
  </div>

  <div class="row justify-content-center">
    <%= f.submit'新規登録', class: "btn btn-success" %>
  </div>

    <% end %>

</div>