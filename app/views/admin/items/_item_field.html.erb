<div class="form-group row">
  <%= f.label :image, "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group row">
  <%= f.label :name, "商品名(必須)" %>
  <%= f.text_field :name %>
</div>

<div class="form-group row">
  <%= f.label :introduction, "商品説明(必須)" %>
  <%= f.text_area :introduction %>
</div>

<div class="form-group row">
  <%= f.label :color, "色(必須)" %>
  <%= f.text_field :color %>
</div>

<div class="form-group row">
  <%= f.label :price, "税抜価格(必須)" %>
  <%= f.text_field :price %>円
</div>

<div class="form-group row">
  <%= f.label :genre_id , "ジャンル(必須)" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
</div>