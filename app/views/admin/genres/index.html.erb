<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 ">

      <h3 style="text-align: center;">
        <span style="background-color: #eaedf7;">ジャンル一覧・追加</span>
      </h3>

      <div class="text-center">
        <%= form_with model: @genre,url: '/admin/genres', method: :post do |f| %>
          <div class="field">
            <%= f.label :image, "ジャンル画像" %>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="field">
            <%= f.label :name, '新しいジャンル名:' %>
            <%= f.text_field :name %>
          </div>
          <%= f.submit '作成する' %>
        <% end %>
      </div>

      <div class="row">
        <% @genres.each do |genre| %>
          <%= link_to edit_admin_genre_path(genre) do %>
            <% if genre.image.present? %>
              <%= image_tag genre.image, width: 150, height: 150 %>
            <% else %>
              <%= image_tag "no_image_item.png", width: 150, height: 150 %>
            <% end %>
            <br><%= genre.name %>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>