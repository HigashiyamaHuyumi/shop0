<div class="container">
  <h5><span style="background-color: #dcdcdc;">注文履歴一覧</span></h5>
  <div class="row">
    <div class="col-md-12">
      <table class = "table table-striped">

        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at, admin_order_path(order) %></td>
              <td>
                <% if order.user.present? %>
                  <%= "#{order.user.last_name} #{order.user.first_name}" %>
                <% else %>
                  顧客情報なし
                <% end %>
              </td>
              <td><%= order.order_details.sum(:amount) %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
  <%= paginate @orders %>
</div>